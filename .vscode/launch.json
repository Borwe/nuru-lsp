// A launch configuration that compiles the extension and then opens it inside a new window
{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}/vscode-plugin/"
			],
			"outFiles": [
				"${workspaceRoot}/vscode-plugin/out/**/*.js"
			],
			"preLaunchTask": {
				"type": "npm",
				"script": "compile"
			}
		},
		{
			"name": "Language Server E2E Test",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceRoot}",
				"--extensionTestsPath=${workspaceRoot}/vscode-plugin/out/test/index",
				"${workspaceRoot}"
			],
			"outFiles": [
				"${workspaceRoot}/vscode-plugin/out/test/**/*.js"
			],
			"autoAttachChildProcesses": true,
			"preLaunchTask": {
				"type": "npm",
				"script": "watch"
			}
		}
	]
}